&spi0 {
	num-cs = <4>;
	cs-gpios =
		<&porta 24 1>, /* ss0 xp8 - DD53 normal flash */
		<&porta 25 1>, /* ss1 xp9 */
		<&porta 26 1>, /* ss2 xp10 */
		<&porta 27 1>; /* ss3 xp11 */
	status = "okay";

	/* SPI flash chip #1 */
	flash0: m25p80@0 {
		compatible = "micron,n25q256a", "jedec,spi-nor";
		reg = <0>;
		#address-cells = <1>;
		#size-cells = <1>;
		spi-max-frequency = <12500000>;
		status = "okay";

		/* Flash chip0 partitions */
		mtd0@0 {
			label = "bl1";
			reg = <0x00000000 0x00040000>;
			read-only;
		};

		mtd1@40000 {
			label = "fip";
			reg = <0x00040000 0x007c0000>;
		};

		mtd2@800000 {
			label = "rescue";
			reg = <0x00800000 0x01800000>;
		};
	};
};

